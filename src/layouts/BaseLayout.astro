---
import BaseHead from "@/components/head/BaseHead.astro";
import NavBar from "@/components/nav/NavBar.astro";
import Footer from "@/components/footer/Footer.astro";

interface Props {
  title: string;
  description: string;
  image?: string;
  type?: string;
}

const { title, description, type = "website", image } = Astro.props;
---

<html lang="en">
  <BaseHead
    title={title + " | Linaro"}
    description={description}
    image={image}
    type={type}
  />
  <body class="min-h-screen flex flex-col text-white">
    <NavBar />
    <slot />
    <Footer />
    <script>
      const animatedElements = document.querySelectorAll("[data-animate]");

      const observer = new IntersectionObserver(
        (entries, observer) => {
          entries.forEach((entry) => {
            if (!(entry.target instanceof HTMLElement)) return;
            const animatedClass = entry.target.dataset["animate"] as string;
            if (entry.isIntersecting) {
              entry.target.classList.add(animatedClass);
              entry.target.classList.remove("invisible");
              observer.unobserve(entry.target);
            } else {
              entry.target.classList.remove(animatedClass);
            }
          });
        },
        {
          rootMargin: "-300px 0px -300px 0px",
        },
      );

      animatedElements.forEach((el) => {
        observer.observe(el);
      });
    </script>
    <script>
      declare global {
        interface Window {
          dataLayer: Record<string, any>[];
        }
      }
      ["DOMContentLoaded", "astro:after-swap"].forEach((event) => {
        document.addEventListener(event, addListeners);
      });

      import { FriendlyCaptchaSDK } from "@friendlycaptcha/sdk";
      import { actions } from "astro:actions";

      // 1. Declare at the top of the script scope
      let captchaWidget: any = null;

      // Initialize the widget
      const mount = document.querySelector("#friendly-captcha-widget");
      if (mount) {
        captchaWidget = new FriendlyCaptchaSDK().createWidget({
          element: mount,
          sitekey: import.meta.env.PUBLIC_FRIENDLY_CAPTCHA_SITEKEY,
        });
      }

      function addListeners() {
        const forms = document.querySelectorAll(
          "[data-contact-form]",
        ) as NodeListOf<HTMLFormElement>;

        forms.forEach((form) => {
          form.addEventListener("submit", (event) => onSubmit(event, form));
        });

        const newsletterForm = document.querySelector(
          "#insight-form",
        ) as HTMLFormElement | null;

        if (newsletterForm) {
          const mailchimpUrl =
            "https://linaro.us3.list-manage.com/subscribe/post?u=14baaae786342d0d405ee59c2&id=bcfa4abc8f";

          newsletterForm.addEventListener("submit", (event) => {
            event.preventDefault();
            const button = newsletterForm.querySelector("#contact-submit");
            const loader = newsletterForm.querySelector("#contact-submitting");
            button?.classList.add("hidden");
            loader?.classList.remove("hidden");
            const formName =
              (
                newsletterForm.querySelector(
                  "input[name='formName']",
                ) as HTMLInputElement
              )?.value || "unknown_form";

            if (!window.dataLayer) {
              window.dataLayer = [];
            }

            if (typeof window.dataLayer.push === "function") {
              window.dataLayer.push({
                formName: formName,
                event: "form_submission",
              });
            }
            const tempForm = document.createElement("form");
            tempForm.action = mailchimpUrl;
            tempForm.method = "POST";
            tempForm.style.display = "none";

            const inputs = newsletterForm.querySelectorAll(
              "input, select, textarea",
            );
            inputs.forEach((input) => {
              const cloned = input.cloneNode(true) as HTMLInputElement;
              tempForm.appendChild(cloned);
            });

            document.body.appendChild(tempForm);
            setTimeout(() => {
              tempForm.submit();
              loader?.classList.add("hidden");
              button?.classList.remove("hidden");
            }, 5000);
          });
        }
      }

      async function handleWebinarResponse(
        form: HTMLFormElement,
        feedbackText: HTMLParagraphElement,
      ) {
        const webinarDataId =
          (
            form.querySelector(
              "input[name='webinarDataId']",
            ) as HTMLInputElement
          )?.value ?? "unknown_webinar";

        try {
          const res = await fetch(`/api/webinar-data/${webinarDataId}`);
          if (!res.ok) {
            throw new Error("Failed to load webinar data");
          }

          const { passcode, url } = await res.json();

          feedbackText.innerHTML = `
      <div class="space-y-4 text-center">
        <p class="text-base">
          Thank you! Please use the passcode below to access the webinar.
        </p>

        <div class="text-lg font-semibold text-blue-600">
          Passcode:
          <div class="text-2xl font-bold text-blue-700">${passcode}</div>
        </div>

        <div>
          <a
            href="${url}"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block text-xl text-blue-700 font-semibold underline"
          >
            Link to webinar recording
          </a>
        </div>
      </div>
    `;
        } catch (err) {
          console.error("Webinar fetch error:", err);
          feedbackText.innerHTML = `
      <p class="text-red-600">
        Sorry, something went wrong loading the webinar information.
      </p>
    `;
        }
      }

      async function handleWhitepaperResponse(
        form: HTMLFormElement,
        feedbackText: HTMLParagraphElement,
      ) {
        const whitepaperId =
          (form.querySelector("input[name='whitepaperId']") as HTMLInputElement)
            ?.value ?? "unknown_whitepaper";

        try {
          const res = await fetch(`/api/whitepaper-data/${whitepaperId}`);
          if (!res.ok) {
            throw new Error("Failed to load whitepaper data");
          }

          const { url } = await res.json();

          feedbackText.innerHTML = `
      <div class="space-y-4 text-center">
        <p class="text-base">
          Thank you! Your download should start automatically.
        </p>

        <div>
          <a
            href="${url}"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block text-xl text-blue-700 font-semibold underline"
          >
            Download Whitepaper
          </a>
        </div>
      </div>
    `;

          // Trigger auto-download
          window.location.href = url;
        } catch (err) {
          console.error("Whitepaper fetch error:", err);
          feedbackText.innerHTML = `
      <p class="text-red-600">
        Sorry, something went wrong loading the whitepaper.
      </p>
    `;
        }
      }

      async function onSubmit(e: SubmitEvent, form: HTMLFormElement) {
        e.preventDefault();

        const feedback = form.parentElement!.querySelector("#contact-feedback");
        const feedbackText = form.parentElement!.querySelector(
          "#contact-feedback-text",
        ) as HTMLParagraphElement;

        const button = form.querySelector("#contact-submit");
        const loader = form.querySelector("#contact-submitting");

        if (!e.target) return;

        const data = new FormData(e.target as HTMLFormElement);
        const payload: Record<string, any> = {};

        const formName =
          (form.querySelector("input[name='formName']") as HTMLInputElement)
            ?.value ?? "unknown_form";

        const captchaSolution = captchaWidget?.response;

        console.log(captchaSolution, captchaWidget);

        if (!captchaSolution) {
          feedback!.classList.remove("hidden");
          feedbackText!.innerText =
            "Please complete the captcha before submitting.";
          button?.classList.remove("hidden");
          loader?.classList.add("hidden");
          return;
        }

        payload["frc-captcha-response"] = captchaSolution;

        // -----------------------
        // Telephone validation
        // -----------------------
        // Message key is now standard 'message'
        const messageKey = "message";
        const phoneInput = form.querySelector(
          'input[name="phone"]',
        ) as HTMLInputElement;

        const phoneNumber = phoneInput?.value || null;
        const phoneRegex = /^[+]?[0-9\s\-()]{6,25}$/;

        if (phoneNumber && !phoneRegex.test(phoneNumber)) {
          feedback?.classList.remove("hidden");
          feedbackText!.innerText = "Please enter a valid telephone number.";
          phoneInput?.classList.add("border-4", "border-red-500");
          return;
        }

        phoneInput?.classList.remove("border-4", "border-red-500");

        // -----------------------
        // Build payload
        // -----------------------
        let message = data.get(messageKey) as string | null;

        data.forEach((value, key) => {
          // Allow all fields except internal ones or captcha response which is handled separately
          if (key !== "frc-captcha-response") {
             payload[key] = value;
          }
        });

        if (phoneNumber) {
          const phoneLine = `Telephone: ${phoneNumber}\n---\n`;
          payload[messageKey] = message ? phoneLine + message : phoneLine;
        }

        // Use standard 'email' field or fallback if needed (though we should enforce standard names now)
        if (!payload.email) {
             console.error("Email missing from payload");
             return;
        }

        delete payload.agreed;
        delete payload.telephone_number;

        console.log(payload);

        // -----------------------
        // Analytics
        // -----------------------
        window.dataLayer ??= [];
        window.dataLayer.push({
          event: "form_submission",
          formName,
        });

        // -----------------------
        // UI state
        // -----------------------
        button?.classList.add("hidden");
        loader?.classList.remove("hidden");

        try {
          // Using Astro Actions
          const { data, error } = await actions.contact(payload);

          if (error) {
            if (error.code === "BAD_REQUEST") {
               captchaWidget?.reset();
               throw new Error(error.message);
            }
            throw new Error(error.message || "Server error");
          }
          
          const result = data;
          if (!result?.success) {
              throw new Error("Submission failed");
          }

          // -----------------------
          // Success UI
          // -----------------------
          form.classList.add("hidden");
          feedback?.classList.remove("hidden");

          if (formName === "webinar_contact") {
            await handleWebinarResponse(form, feedbackText);
          } else if (formName === "whitepaper_contact") {
            await handleWhitepaperResponse(form, feedbackText);
          } else {
            feedbackText!.innerText = result.message;
          }
        } catch (err) {
          console.error("Form submission error:", err);
          feedback?.classList.remove("hidden");
          feedbackText!.innerText =
            "There was an error during submission. Please try again later.";
          button?.classList.remove("hidden");
        } finally {
          loader?.classList.add("hidden");
        }
      }
    </script>
  </body>
</html>
