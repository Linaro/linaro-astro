---
import { DropdownItems } from "astro-navbar";
const { title, lastItem, children } = Astro.props;
---

<li class="relative" class="border-b-2">
  <menu
    class:list={["astronav-dropdown group"]}
    aria-expanded="false"
    data-nav-group={title}
  >
    <div class="duration-300">
      <button
        class:list={[
          "flex items-center gap-1 w-full lg:w-auto lg:px-3 py-2 xl:py-3 hover:linaro-gradient-text",
        ]}
      >
        <span>{title}</span>
      </button>
    </div>
    <DropdownItems class="block lg:hidden">
      <div
        class:list={[
          "lg:absolute w-full lg:w-48 z-10 mt-1",
          lastItem
            ? "lg:right-0 origin-top-right"
            : "lg:left-0 origin-top-left",
        ]}
      >
        <div
          class="lg:py-2 lg:bg-white lg:rounded-md lg:shadow lg:border flex flex-col"
        >
          {
            children.map((item: any) => (
              <a href={item.url} class=" px-3 py-1  hover:text-white ">
                {item.label}
              </a>
            ))
          }
        </div>
      </div>
    </DropdownItems>
  </menu>
</li>
