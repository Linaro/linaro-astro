---
const { title, lastItem, children } = Astro.props;
---

<menu
  class:list={["astronav-dropdown group h-auto lg:content-start relative"]}
  aria-expanded="false"
  data-nav-group={title}
>
  <div class="duration-300">
    <button
      class:list={[
        "flex items-center gap-1 w-full lg:w-auto lg:px-3 py-2 xl:py-3 hover:linaro-gradient-text nav-inactive",
      ]}
    >
      <span>{title}</span>
    </button>
  </div>
  <div
    class:list={[
      "astronav-dropdown dropdown-toggle hidden h-auto lg:content-start",
    ]}
    aria-expanded="false"
  >
    <div
      class:list={[
        "lg:absolute z-50 mt-1 lg:-left-2 h-auto",
        "lg:bg-background lg:border lg:border-white/10 lg:shadow-2xl lg:rounded-2xl lg:p-4 lg:w-[400px]",
      ]}
    >
      <div class="flex flex-col w-full gap-x-2 gap-y-2 h-auto">
        {
          children.map((item: any) => (
            <a
              href={item.url}
              class="lg:px-3 py-2 text-grey hover:text-linaro-yellow cursor-pointer whitespace-nowrap text-sm"
              target={item.url.startsWith("https") ? "_blank" : "_self"}
            >
              {item.label}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</menu>
<style lang="scss">
  .open {
    button {
      @apply bg-linaro-gradient bg-clip-text text-transparent;
    }
  }
</style>
