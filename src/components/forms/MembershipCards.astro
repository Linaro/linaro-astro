---
const { MemberManagementPanel, styles } = Astro.props;
---

<ul
  class:list={[
    "list-none flex lg:flex-row flex-col items-center lg:items-stretch p-0 mx-auto justify-between w-full",
    styles?.container,
  ]}
>
  {
    MemberManagementPanel.map(
      (
        {
          title,
          description,
          name,
          title_style,
        }: {
          title: string;
          description: string;
          name: string;
          title_style: string;
        },
        index: number
      ) => (
        <li class:list={[styles?.card, "lg:basis-1/3", "relative px-4"]}>
          <p class:list={["text-xl my-0", title_style]}>{title}</p>
          <p class="text-xl my-0 linaro-gradient-text">{name}</p>
          <p class="text-md">{description}</p>
          {index < MemberManagementPanel.length - 1 && (
            <div class="hidden lg:block absolute top-0 bottom-0 right-0 w-[1px] bg-grey h-24" />
          )}
        </li>
      )
    )
  }
</ul>
