---
import { Icon } from "astro-icon/components";

const { cards, card_styles, container_styles } = Astro.props;
---

<ul class:list={["list-none flex flex-wrap justify-center p-0 gap-x-28 gap-y-20", container_styles]}>
  {
    cards.map(
      ({
        icon,
        title,
        text,
        button,
      }: {
        icon: string;
        title: string;
        text: string;
        button: { text: string; url: string };
      }) => (
        <li class:list={[card_styles]}>
          {icon && <Icon name={icon} size={100} class="my-0" />}
          <h3 class="text-4xl my-5">{title}</h3>
          <p class="text-xl">{text}</p>
          {button && (
            <a href={button.url}>
              <button class="linaro-gradient-button">{button.text}</button>
            </a>
          )}
        </li>
      )
    )
  }
</ul>
