---
import type { textSchema } from "@/content/schemas/sections";
import type { z } from "astro/zod";
import * as marked from "marked";

type Props = z.infer<typeof textSchema>;

const { style, text_content } = Astro.props;
const markdown = await marked.parse(text_content);
---

<div class:list={[style]} set:html={markdown} />
