---
import type { z } from "astro/zod";
import CloudinaryImg from "../cloudinary/CloudinaryImg.astro";
const { images } = Astro.props;
---

<div
  class="w-full inline-flex flex-nowrap [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-200px),transparent_100%)] overflow-hidden mt-4 mb-8"
>
  <ul
    class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll not-prose"
  >
    {
      images.map(({ src, alt }: { src: string; alt: string }) => (
        <li>
          <CloudinaryImg
            src={src}
            alt={alt}
            width={150}
            height={150}
            svg={true}
          />
        </li>
      ))
    }
  </ul>
  <ul
    class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll not-prose"
    aria-hidden="true"
  >
    {
      images.map(({ src, alt }: { src: string; alt: string }) => (
        <li>
          <CloudinaryImg
            src={src}
            alt={alt}
            width={150}
            height={150}
            svg={true}
          />
        </li>
      ))
    }
  </ul>
</div>
