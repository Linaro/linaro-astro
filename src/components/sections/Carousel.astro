---
import CloudinaryImg from "../cloudinary/CloudinaryImg.astro";

const { images } = Astro.props;
---

<div
  class="w-full inline-flex flex-nowrap [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-200px),transparent_100%)] overflow-hidden"
>
  <ul
    class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none list-none animate-infinite-scroll"
  >
    {
      images.map(({ src, alt }: { src: string; alt: string }) => (
        <li class="w-[150px]">
          <CloudinaryImg src={src} alt={alt} width={150} height={150} />
        </li>
      ))
    }
  </ul>
  <ul
    class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none list-none animate-infinite-scroll"
    aria-hidden="true"
  >
    {
      images.map(({ src, alt }: { src: string; alt: string }) => (
        <li>
          <CloudinaryImg src={src} alt={alt} width={150} height={150} />
        </li>
      ))
    }
  </ul>
</div>
