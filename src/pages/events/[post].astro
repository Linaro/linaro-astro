---
import EventLayout from "@/layouts/EventLayout.astro";
import { getCollection, type CollectionEntry, getEntry } from "astro:content";
export async function getStaticPaths() {
  const events = await getCollection("events");
  return events
    .filter(
      (post) =>
        String(import.meta.env.IS_PREVIEW === "true") ||
        Date.now() > new Date(post.data.date_published).getTime(),
    )
    .map((post) => {
      const slug = post.id.replace(/\.mdx?$/, "");
      return {
        params: { post: slug },
        props: { post },
      };
    });
}
const { post: postParam } = Astro.params;
let data: CollectionEntry<"events"> | undefined = Astro.props.post;

if (!data && postParam) {
  data = await getEntry("events", postParam);
}

if (!data) {
  return Astro.redirect("/404");
}

const finalPost = data as CollectionEntry<"events">;
---

<EventLayout post={finalPost} />
